---
import Navbar from "../components/Navbar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="halloween">
  <head>
    <script type="text/javascript">
      new Image().src =
        "https://nullitics.com/n.gif?u=" +
        encodeURI(location.href) +
        "&r=" +
        encodeURI(document.referrer) +
        "&d=" +
        screen.width;
    </script>
    <noscript><img src="https://nullitics.com/n.gif" /></noscript>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="pb-8">
    <Navbar class="py-4" />
    <div class="mx-auto w-full max-w-screen-sm px-4 pt-14">
      <div
        class="my-6 w-full rounded-xl bg-neutral py-3 text-center text-neutral-content"
      >
        Hi ðŸ‘‹, I'm a software developer based in Argentina
      </div>
      <div class="flex flex-col md:flex-row">
        <div class="flex-1 pt-2">
          <h2 class="text-3xl font-semibold">Agustin Aon</h2>
          <p>Backend Developer, Electronics Engineer</p>
        </div>
        <div class="avatar mt-5 self-center md:mt-0">
          <div
            class="ring-thin w-28 rounded-full ring ring-base-content ring-offset-1 ring-offset-base-100"
          >
            <img src="/profile.png" />
          </div>
        </div>
      </div>
      <slot />
    </div>
  </body>
</html>

<style is:global>
  .ring-thin {
    --tw-ring-shadow: var(--tw-ring-inset) 0 0 0
      calc(1px + var(--tw-ring-offset-width)) var(--tw-ring-color);
  }
</style>
